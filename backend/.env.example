# MongoDB
MONGO_URI=mongodb://localhost:27017/interview-system

# JWT Secret
JWT_SECRET=your-secret-key-here

# Admin Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin@123
ADMIN_FORCE_RESET=false

# Bcrypt
BCRYPT_ROUNDS=10

# Email Configuration (Nodemailer)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@example.com

# Cloudinary Configuration (for profile pictures)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Supabase Configuration (for other file storage - optional)
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-key
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_BUCKET=templates
SUPABASE_AVATAR_BUCKET=avatars
SUPABASE_PUBLIC=true
SUPABASE_SIGNED_TTL=3600

# Server
PORT=5000
NODE_ENV=development
